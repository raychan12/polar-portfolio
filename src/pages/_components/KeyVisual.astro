---
import { Image } from 'astro:assets';

import KeyVisualImage from '../../assets/KV_sRGB.png';
import Ljus from '../../assets/ljus.svg';
import KvPhrase from '../../assets/kv-phrase.svg';

import { root, main, image, background, phrase } from './KeyVisual.css';
---

<div class={root}>
	<div class={main}>
		<Image class={image} src={KeyVisualImage} alt="" layout="fixed" width={1200} height={800} />
		<div class={phrase}>
			<Ljus />
			<KvPhrase />
		</div>
	</div>
	<Image class={background} src={KeyVisualImage} alt="" layout="fixed" width={32} height={24} />
</div>
