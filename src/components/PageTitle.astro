---
import { Image } from 'astro:assets';

import FvVertical from '../assets/fv-vert.webp';

import { root, main, image, titleText, background } from './PageTitle.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class={root}>
	<div class={main}>
		<Image class={image} src={FvVertical} alt="" layout="constrained" />
		<h1 class={titleText}>{title}</h1>
	</div>
	<Image class={background} src={FvVertical} alt="" layout="fixed" width={32} height={24} />
</div>
