---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { main } from './PageLayout.css';

interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<Fragment>
	<Header />
	<main class:list={[main, className]}>
		<slot />
	</main>
	<Footer />
</Fragment>
